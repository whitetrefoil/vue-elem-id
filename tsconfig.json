{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration"                 : true,
    "declarationDir"              : "lib/types",
    "esModuleInterop"             : true,
    "experimentalDecorators"      : true,
    "inlineSourceMap"             : false,
    "inlineSources"               : true,
    "lib"                         : ["es2017", "dom"],
    "module"                      : "esnext",
    "moduleResolution"            : "node",
    "noImplicitAny"               : true,
    "outDir"                      : "lib/esm",
    "removeComments"              : false,
    "skipLibCheck"                : true,
    "sourceMap"                   : true,
    "strict"                      : true,
    "target"                      : "es2017"
  },
  "include"        : [
    "declarations/*.d.ts",
    "src/**/*.ts"
  ]
}
